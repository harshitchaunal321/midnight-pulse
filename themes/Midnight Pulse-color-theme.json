{
    "name": "Midnight Pulse Pro",
    "type": "dark",
    "colors": {
        // Core UI Colors
        "focusBorder": "#BB86FC80",
        "foreground": "#E0E0E0",
        "disabledForeground": "#757575",
        "widget.shadow": "#00000060",
        "selection.background": "#7C4DFF40",
        "descriptionForeground": "#A0A0A0",
        "errorForeground": "#FF6E6E",
        "icon.foreground": "#BB86FC",
        "sash.hoverBorder": "#7C4DFF",
        // Window & UI
        "window.activeBorder": "#252525",
        "window.inactiveBorder": "#252525",
        "activityBar.background": "#1F1F1F",
        "activityBar.foreground": "#E0E0E0",
        "activityBar.activeBorder": "#BB86FC",
        "statusBar.background": "#1F1F1F",
        "statusBar.foreground": "#E0E0E0",
        "statusBarItem.hoverBackground": "#2A2A2A",
        // Editor
        "editor.background": "#1E1E1E",
        "editor.foreground": "#E0E0E0",
        "editorLineNumber.foreground": "#5A5A5A",
        "editorLineNumber.activeForeground": "#BB86FC",
        "editor.lineHighlightBackground": "#2A2A2A80",
        "editorCursor.foreground": "#BB86FC",
        "editorWhitespace.foreground": "#404040",
        "editorIndentGuide.background": "#353535",
        "editorIndentGuide.activeBackground": "#505050",
        // Sidebar
        "sideBar.background": "#1F1F1F",
        "sideBar.foreground": "#E0E0E0",
        "sideBarTitle.foreground": "#E8E8E8",
        "sideBarSectionHeader.background": "#1A1A1A",
        // Tabs
        "tab.activeBackground": "#252525",
        "tab.inactiveBackground": "#1F1F1F",
        "tab.activeForeground": "#F0F0F0",
        "tab.inactiveForeground": "#A0A0A0",
        "tab.border": "#252525",
        "tab.hoverBackground": "#2A2A2A",
        // Buttons & Inputs
        "button.background": "#7C4DFF",
        "button.hoverBackground": "#9C27B0",
        "button.foreground": "#FFFFFF",
        "input.background": "#252525",
        "input.border": "#404040",
        "input.foreground": "#E0E0E0",
        "input.placeholderForeground": "#808080",
        "inputValidation.infoBackground": "#1E2B5E",
        "inputValidation.warningBackground": "#5E4D1E",
        "inputValidation.errorBackground": "#5E1E1E",
        // Lists & Trees
        "list.activeSelectionBackground": "#7C4DFF40",
        "list.hoverBackground": "#2A2A2A",
        "list.focusBackground": "#7C4DFF30",
        "list.inactiveSelectionBackground": "#3D3D3D",
        // Terminal
        "terminal.background": "#1E1E1E",
        "terminal.foreground": "#E0E0E0",
        "terminalCursor.background": "#E0E0E0",
        "terminalCursor.foreground": "#BB86FC",
        "terminal.ansiBlack": "#1E1E1E",
        "terminal.ansiBlue": "#82B1FF",
        "terminal.ansiCyan": "#4FD8E8",
        "terminal.ansiGreen": "#A5D6A7",
        "terminal.ansiMagenta": "#CE93D8",
        "terminal.ansiRed": "#FF8A80",
        "terminal.ansiWhite": "#E0E0E0",
        "terminal.ansiYellow": "#FFE082",
        "terminal.ansiBrightBlack": "#5A5A5A",
        "terminal.ansiBrightBlue": "#9EBEFF",
        "terminal.ansiBrightCyan": "#88F3FF",
        "terminal.ansiBrightGreen": "#C8E6C9",
        "terminal.ansiBrightMagenta": "#E1BEE7",
        "terminal.ansiBrightRed": "#FFBCAF",
        "terminal.ansiBrightWhite": "#FFFFFF",
        "terminal.ansiBrightYellow": "#FFECB3",
        // Git colors
        "gitDecoration.addedResourceForeground": "#A5D6A7",
        "gitDecoration.modifiedResourceForeground": "#FFE082",
        "gitDecoration.deletedResourceForeground": "#FF8A80",
        "gitDecoration.untrackedResourceForeground": "#4FD8E8",
        "gitDecoration.ignoredResourceForeground": "#757575",
        // Diff editor
        "diffEditor.insertedTextBackground": "#2E7D3220",
        "diffEditor.removedTextBackground": "#C6282820"
    },
    "tokenColors": [
        {
            "name": "Comments",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#6D6D6D",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Documentation",
            "scope": [
                "comment.block.documentation",
                "comment.line.documentation"
            ],
            "settings": {
                "foreground": "#8E8E8E",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Strings",
            "scope": [
                "string",
                "string.quoted",
                "string.template",
                "punctuation.definition.string"
            ],
            "settings": {
                "foreground": "#A5D6A7"
            }
        },
        {
            "name": "String Interpolation",
            "scope": [
                "string.template punctuation.definition.template-expression",
                "string.interpolation punctuation.definition.interpolation",
                "string.template meta.template.expression"
            ],
            "settings": {
                "foreground": "#FFE082"
            }
        },
        {
            "name": "Numbers & Booleans",
            "scope": [
                "constant.numeric",
                "constant.language.boolean"
            ],
            "settings": {
                "foreground": "#FFAB91"
            }
        },
        {
            "name": "Language Constants",
            "scope": [
                "constant.language",
                "support.constant"
            ],
            "settings": {
                "foreground": "#4FD8E8"
            }
        },
        {
            "name": "Keywords & Control Flow",
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier",
                "keyword.control",
                "keyword.operator.new",
                "keyword.control.flow"
            ],
            "settings": {
                "foreground": "#BB86FC",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Operators",
            "scope": [
                "keyword.operator"
            ],
            "settings": {
                "foreground": "#E1BEE7"
            }
        },
        {
            "name": "Functions & Methods",
            "scope": [
                "entity.name.function",
                "support.function",
                "meta.function-call",
                "variable.function",
                "support.method"
            ],
            "settings": {
                "foreground": "#82B1FF"
            }
        },
        {
            "name": "Classes & Types",
            "scope": [
                "entity.name.type.class",
                "entity.name.type",
                "support.class",
                "support.type",
                "entity.name.namespace"
            ],
            "settings": {
                "foreground": "#FFE082",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Variables & Parameters",
            "scope": [
                "variable",
                "variable.parameter",
                "variable.other",
                "meta.parameter"
            ],
            "settings": {
                "foreground": "#E0E0E0"
            }
        },
        {
            "name": "Object Properties",
            "scope": [
                "variable.object.property",
                "support.variable.property",
                "meta.object-literal.key"
            ],
            "settings": {
                "foreground": "#E1BEE7"
            }
        },
        {
            "name": "Constants & Enums",
            "scope": [
                "variable.other.constant",
                "constant.other",
                "entity.name.variable.constant"
            ],
            "settings": {
                "foreground": "#4FD8E8",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Decorators & Annotations",
            "scope": [
                "meta.decorator",
                "storage.type.annotation"
            ],
            "settings": {
                "foreground": "#CE93D8",
                "fontStyle": "italic"
            }
        },
        {
            "name": "HTML/XML Tags",
            "scope": [
                "entity.name.tag",
                "punctuation.definition.tag"
            ],
            "settings": {
                "foreground": "#FF8A80"
            }
        },
        {
            "name": "HTML/XML Attributes",
            "scope": [
                "entity.other.attribute-name"
            ],
            "settings": {
                "foreground": "#CE93D8"
            }
        },
        {
            "name": "CSS Selectors",
            "scope": [
                "entity.name.tag.css",
                "entity.other.attribute-name.class.css",
                "entity.other.attribute-name.id.css"
            ],
            "settings": {
                "foreground": "#4FD8E8"
            }
        },
        {
            "name": "CSS Properties",
            "scope": [
                "support.type.property-name.css"
            ],
            "settings": {
                "foreground": "#A5D6A7"
            }
        },
        {
            "name": "CSS Values",
            "scope": [
                "support.constant.property-value.css"
            ],
            "settings": {
                "foreground": "#FFE082"
            }
        },
        {
            "name": "JSON Keys",
            "scope": [
                "support.type.property-name.json"
            ],
            "settings": {
                "foreground": "#82B1FF"
            }
        },
        {
            "name": "Markdown Headings",
            "scope": [
                "markup.heading",
                "entity.name.section"
            ],
            "settings": {
                "foreground": "#BB86FC",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Markdown Links",
            "scope": [
                "markup.underline.link"
            ],
            "settings": {
                "foreground": "#82B1FF"
            }
        },
        {
            "name": "Markdown Code",
            "scope": [
                "markup.inline.raw",
                "markup.fenced_code.block"
            ],
            "settings": {
                "foreground": "#A5D6A7"
            }
        },
        {
            "name": "Markdown Bold",
            "scope": [
                "markup.bold"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "name": "Markdown Italic",
            "scope": [
                "markup.italic"
            ],
            "settings": {
                "fontStyle": "italic"
            }
        }
    ]
}